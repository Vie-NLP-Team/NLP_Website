<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.opinion.viopinion.dao.MonthDao">

    <resultMap type="com.opinion.viopinion.entity.Month" id="MonthMap">

        <result property="id" column="id" jdbcType="INTEGER"/>

        <result property="title" column="title" jdbcType="VARCHAR"/>

        <result property="pubTime" column="pub_time" jdbcType="TIMESTAMP"/>

        <result property="abstract1" column="abstract1" jdbcType="VARCHAR"/>

        <result property="body" column="body" jdbcType="VARCHAR"/>


        <result property="images" column="images" jdbcType="VARCHAR"/>

        <result property="m_id" column="m_id" jdbcType="INTEGER"/>

        <result property="month_event" column="monthevent" jdbcType="INTEGER"/>

    </resultMap>

    <!--通过热点事件id返回新闻列表(再加上摘要文章内容和url) -->

    <select id="queryHotPointArticle" resultMap="MonthMap">
        select
            id, title, pub_time, abstract1, body, images
        from article
        where id in (select m_id from montharticle where monthevent = #{monthevent} )
    </select>


</mapper>